body.stat
    color: black
    background: white
    margin: 0 10px 15px
    #navi
        margin: 0
    #stat
        display: block
    > .version
        display: none

#stat
    display: none
    font-size: 14px
    font-family: menu-font
    h1
        font-size: 24px
        margin-top: 0
        border-bottom: solid 2px black
        img
            height: 36px
            vertical-align: bottom
    > .version
        margin-top: -2.6em
        font-family: defen-font
        text-align: right

    .stat
        margin-top: 20px
        overflow: auto
        > div
            display: table
            max-width: 960px
            width: 100%

        .button
            float: right
            .cut-off
                font-size: 12px
                input[name="n_game"]
                    width: 2em

            a.file
                display: inline-block
                margin-left: 1em
                padding: 6px 10px
                border-radius: 5px
                white-space: nowrap
                line-height: 1em
                text-decoration: none
                cursor: pointer
                color: white
                background: #999
                img
                    height: 1em
                    margin-right: 4px
                    vertical-align: bottom
                &:hover
                    background: #ccc
        h2
            margin: 0
            font-family: title-font
            font-size: 24px
            &::after
                display: block
                content: ''
                clear: both
        table
            min-width: 780px
            width: 100%
            margin-top: 1em
            border-collapse: collapse
            font-size: 16px
            white-space: nowrap
            thead
            tbody
                border-bottom: solid 2px black
                tr
                    border-bottom: solid 1px #ccc
            th
                padding: 2px 10px 2px 4px
                font-family: menu-font
                &.asc
                    background: no-repeat right center url(../img/icon-chevron-up.png)
                    background-size: 8px
                &.desc
                    background: no-repeat right center url(../img/icon-chevron-down.png)
                    background-size: 8px
                a
                    cursor: pointer
            td
                padding: 2px 0.5em
                font-family: text-font
                &.num
                    text-align: right
